<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Khipu" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Khipu.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen_icon_resized</item>
        <item name="postSplashScreenTheme">@style/Theme.Khipu</item>
    </style>
</resources>